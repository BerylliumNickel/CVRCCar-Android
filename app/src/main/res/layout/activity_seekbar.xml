<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:visibility="visible"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hue_settings"
        android:textColor="@color/colorPrimaryDark" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/min"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewMinHueVal"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp" />

        <SeekBar
            android:id="@+id/seekBarMinHue"
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:max="@integer/maxHueKey"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/max"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            tools:elevation="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewMaxHueVal"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp" />

        <SeekBar
            android:id="@+id/seekBarMaxHue"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:max="@integer/maxHueKey"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saturation_settings"
        android:textColor="@color/colorPrimaryDark" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/min"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewMinSatVal"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp" />

        <SeekBar
            android:id="@+id/seekBarMinSat"
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:max="@integer/maxSatValKey"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/max"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewMaxSatVal"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp" />

        <SeekBar
            android:id="@+id/seekBarMaxSat"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:max="@integer/maxSatValKey"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/value_settings"
        android:textColor="@color/colorPrimaryDark" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/min"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewMinValVal"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp" />

        <SeekBar
            android:id="@+id/seekBarMinVal"
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:max="@integer/maxSatValKey"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/max"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewMaxValVal"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp" />

        <SeekBar
            android:id="@+id/seekBarMaxVal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:max="@integer/maxSatValKey"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contour_settings"
        android:textColor="@color/colorPrimaryDark" />

    <Switch
        android:text="@string/show_contour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:id="@+id/switchContour"/>

</LinearLayout>